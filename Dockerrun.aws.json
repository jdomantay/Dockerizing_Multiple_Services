{
    "AWSEBDockerrunVersion" : 2,
    "containderDefinitions" : [
        {
            "name" : "client",
            "image" : "johnmatthewd/client-p",
            "hostname" :"client",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" : "nginx",
            "image" : "johnmatthewd/nginx-p",
            "hostname" : "nginx",
            "essential": true,
            "memory" : 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links" :[
                "client","server"
            ]
        },
        
        {
            "name": "server",
            "image" : "johnmatthewd/server-p",
            "hostname" : "api",
            "essential" : false,
            "memory" : 128
        },
        {
            "name" :"worker",
            "image" : "johnmatthewd/worker-p",
            "hostname" : "worker",
            "essential" : false,
            "memory" : 128
        }

    ]
}